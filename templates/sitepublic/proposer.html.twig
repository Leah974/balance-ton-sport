{% extends 'base.html.twig' %}

{% block main %}
<section class="form-elegant container margin-top">

    {# Form without header #}
    <div class="card">

        <div class="card-body mx-4">

		    {{ form_start(form, {'method': 'POST'}) }}

		    	{{ form_errors(form) }}

		    	<div class="md-form">
		        	{{ form_errors(form.titre) }}
					{{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
					{{ form_label(form.titre, "Titre de l'événement") }}
		    	</div>

		    	<div class="md-form">
		        	{{ form_errors(form.description) }}
					{{ form_widget(form.description, {'attr': {'class': 'md-textarea'}}) }}
					{{ form_label(form.description, "Description de l'événement") }}
		    	</div>

		    	<div class="form-group">
		        	{{ form_errors(form.statut) }}
		        	{{ form_label(form.statut, "Cet événement est privé") }}
					{{ form_widget(form.statut, {'attr': {'class': ''}}) }}
		    	</div>

		    	<div class="md-form">
		        	{{ form_errors(form.dateEvenement) }}
					{{ form_widget(form.dateEvenement, {'attr': {'class': 'form-control'}}) }}
		    	</div>

		    	<div class="form-group">
		    		{{ form_label(form.inscription, "Evénement sur inscription ?") }}
					{{ form_widget(form.inscription, {'attr': {'class': ''}}) }}
		    	</div>

		    	<div class="md-form">
					{{ form_widget(form.participantMin, {'attr': {'class': 'form-control'}}) }}
					{{ form_label(form.participantMin, "Nombre de participants minimum") }}
		    	</div>

		    	<div class="md-form">
					{{ form_widget(form.participantMax, {'attr': {'class': 'form-control'}}) }}
					{{ form_label(form.participantMax, "Nombre de participants maximum") }}
		    	</div>
		    	
		    	<div class="">
		    		<label>Niveau requis</label>
		        	{{ form_errors(form.niveau) }}
					{{ form_widget(form.niveau, {'attr': {'class': 'browser-default'}}) }}
		    	</div>

		    	<div class="text-center">
		        	<button class="btn btn-primary" type="submit">S'inscrire ! <i class="fa fa-paper-plane-o ml-1"></i></button>
		        </div>

		    {{ form_end(form) }}
		</div>

	</div>

</section>

{% endblock %}